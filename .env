# EduNudge AI Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Institution Information
INSTITUTION_NAME=Your Educational Institution
CONTACT_PHONE=+1-555-123-4567
CONTACT_EMAIL=admissions@yourinstitution.edu
WEBSITE_URL=https://yourinstitution.edu

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Retell AI Configuration
RETELL_API_KEY=your-retell-api-key
RETELL_FROM_NUMBER=+1-555-987-6543
RETELL_DEFAULT_AGENT_ID=your-default-agent-id
COUNSELOR_PHONE_NUMBER=+1-555-111-2222

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# WhatsApp Business API Configuration
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/api/webhook/whatsapp

# n8n Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key
N8N_BASE_URL=https://your-n8n-instance.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourinstitution.edu

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE="Too many requests from this IP"

# Monitoring and Analytics
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Development & Testing
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
TEST_PHONE_NUMBER=+1-555-000-0000
TEST_EMAIL=test@example.com
